@page "/sdk/access/role/m/{RecordId}/{PageName?}"

@model WebVella.Erp.Plugins.SDK.Pages.Role.ManageModel
@{
	Layout = "~/Pages/_AppMaster.cshtml";
	ViewData["Title"] = "Manage Application";

}
<wv-page-header color="#dc3545" area-label="Roles" title="Manage Role"
				icon-class="fa fa-key" return-url="@Model.ReturnUrl">
	<wv-page-header-actions>
		<wv-button type="Button" size="Small" onclick="ErpEvent.DISPATCH('WebVella.Erp.Web.Components.PcForm','submit')" color="Primary" icon-class="fa fa-save go-white" text="Save Role"></wv-button>
		<wv-button type="LinkAsButton" size="Small" href="@Model.ReturnUrl" text="Cancel" color="White"></wv-button>
	</wv-page-header-actions>

</wv-page-header>

<wv-validation validation="Model.Validation" show-errors="false"></wv-validation>

<wv-form name="ManageRecord" validation="Model.Validation" label-mode="Stacked" mode="Form" autocomplete="false">
	<wv-section class="mt-4">
		<wv-row>
			<wv-column span="6">
				<wv-field-text label-text="Name" value="@Model.Name" name="Name" required="true"></wv-field-text>
			</wv-column>
		</wv-row>
		<wv-row>
			<wv-column span="12">
				<wv-field-textarea label-text="Description" value="@Model.Description" name="Description"></wv-field-textarea>
			</wv-column>
		</wv-row>
	</wv-section>
</wv-form>
