@page "/sdk/access/role/c/{PageName?}"

@model WebVella.Erp.Plugins.SDK.Pages.Role.CreateModel
@{
	Layout = "~/Pages/_AppMaster.cshtml";
	ViewData["Title"] = "Create New Application";

}

<wv-page-header color="#dc3545" area-label="Role" title="New Role"
				icon-class="fa fa-plus" return-url="@Model.ReturnUrl">
	<wv-page-header-actions>
		<wv-button type="Button" size="Small" onclick="ErpEvent.DISPATCH('WebVella.Erp.Web.Components.PcForm','submit')" color="Green" icon-class="fa fa-plus go-white" text="Create Role"></wv-button>
		<wv-button type="LinkAsButton" size="Small" href="@Model.ReturnUrl" text="Cancel" color="White"></wv-button>
	</wv-page-header-actions>
</wv-page-header>

<wv-validation validation="Model.Validation" show-errors="false"></wv-validation>

<wv-form name="CreateRecord" validation="Model.Validation" label-mode="Stacked" mode="Form" autocomplete="false">
	<wv-section class="mt-4">
		<wv-row>
			<wv-column span="6">
				<wv-field-text label-text="Name" value="@Model.Name" name="Name" required="true"></wv-field-text>
			</wv-column>
		</wv-row>
		<wv-row>
			<wv-column span="12">
				<wv-field-textarea label-text="Description" value="@Model.Description" name="Description"></wv-field-textarea>
			</wv-column>
		</wv-row>
	</wv-section>
</wv-form>
