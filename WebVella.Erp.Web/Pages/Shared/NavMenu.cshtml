@using WebVella.Erp.Web.Models;
@{
    var menu = (MenuItem)Model;

}

@if (menu.RenderWrapper)
{
	<div class="menu-nav-wrapper @menu.Class">
		<div class="menu-nav @(menu.Nodes.Count > 0 ? "dropdown" : "")">
			@if (menu.IsHtml)
			{
				@Html.Raw(menu.Content)
			}
			else
			{
				@menu.Content
			}
		</div>
		@if (menu.Nodes.Count > 0)
		{
			<div class="dropdown-menu  @(menu.isDropdownRight ? "dropdown-menu-right" : "")">
				@foreach (var childMenu in menu.Nodes)
				{
					@if (childMenu.IsHtml)
					{
						@Html.Raw(childMenu.Content)
					}
					else
					{
						@childMenu.Content
					}
				}
			</div>
		}
	</div>
}
else
{
	@if (menu.IsHtml)
	{
		@Html.Raw(menu.Content)
	}
	else
	{
		@menu.Content
	}
	@foreach (var childMenu in menu.Nodes)
	{
		@if (childMenu.IsHtml)
		{
			@Html.Raw(childMenu.Content)
		}
		else
		{
			@childMenu.Content
		}
	}
}